  .response-button
    set-fg()
    set-bg()
    &:hover
      set-bg1()

  label:hover div.uniform-
    &checker span
      set-bg()

  .response-label
    &.selected
      set-bg()
    &:hover
      background-color unset

  .content-wrapper
    set-bg()

  #rankingWidget
    .rank
    .select
      set-bg()

  div.uniform-
    &checker
    &radio
      span
        set-fg()
    &radio span.uniform-checked:not(.hidden-response)
      background-color fg

  .grid-cell label div.uniform-radio > span
    set-bg()

  .question .question-text
  .label-inner
    set-fg()

  .grid-layout
    tr.grid-row th
    .grid-item-text-left
      set-fg()
    tbody tr:hover >
      th
      td
        set-bg1()
      td:hover
        set-bg2()
    tr th.grid-item-text-right
      set-fg()

  .rankSelectionBlock
    set-bg1()

  .grid-container-sticky-header .grid-layout thead
    th
    td
      set-bg1()

  select:hover
    border-color #616e90

  input[type='text']
  input[type='number']
  textarea
    set-fg()
    set-bg1()
    border-color fg

  textarea[readonly]
    set-bg2()

  .scale-options
    background-image linear-gradient(bg1 100%, transparent 90%)

  .scale_button span
    set-bg1()

  .alert
    color alert
    background-color '%s33' % alert
