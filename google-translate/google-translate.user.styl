/* ==UserStyle==
@name           Google Translate
@namespace      github.com/aruncveli/userstyles
@version        24.07.13
@description    description
@author         Arun Chandanaveli <aruncveli@gmail.com> (https://github.com/aruncveli)
@homepageURL    https://github.com/aruncveli/userstyles
@supportURL     https://github.com/aruncveli/userstyles/issues
@updateURL      https://github.com/aruncveli/userstyles/raw/main/google-translate/google-translate.user.styl
@license        MIT
@preprocessor   stylus
@var	color	fg	        "Foreground"	            white
@var	color	bg	        "Background"	            black
@var	color	bg1	        "Background lightened 1"	#111111
@var	color	bg2	        "Background lightened 2"	#222222
@var	color	link-color	"Link"                    #0b84ff
==/UserStyle== */

set-bg(var = bg)
  background var

set-bg1()
  set-bg(bg1)

set-bg2()
  set-bg(bg2)

set-fg()
  color fg

@-moz-document url-prefix("https://translate.google.com")
  :root
    color-scheme dark

  body
    set-bg()

  #gb
    background-color bg !important

  // Tabs
  .U0xwnf::after
  .X4DQ0::after
    background linear-gradient(to right, rgba(0, 0, 0, 0), rgb(0, 0, 0, 1))
  .Rj2Mlf:not(:disabled)
    &
    &:hover
      border-color bg

  // Text
  .ccvoYb
    set-bg()
  .QcsUad
    set-bg1()

  .ySES5
    set-bg()

  // Languages
  .Ose4Jf .VfPpkd-jY41G-V67aGc
  .ZihNHd:not(:disabled) .VfPpkd-kBDsod
  .JJYS0b:hover .VfPpkd-jY41G-V67aGc
    set-fg()

  // Text area
  .er8xn
    set-fg()

  .rm1UF
    border-color bg1

  // Translation results
  .lRu31
    set-fg()

  // Noun, verb
  .jq25U
    set-fg()
  .dWI6ed // See dictionary
    set-fg()
  .U8K5nb // Word samples
    set-bg2()
    set-fg()

  // Langauge selector
  .bvzp8c
    set-bg()
  .fMHXgc // Top bar
    set-bg()
    border-bottom-color fg
  .yFQBKb // Search langauges
    set-bg()
    &::placeholder
      set-fg()
  // stylelint-disable-next-line stylus/no-eol-whitespace
  .qSb8Pe // List of languages
    set-fg()
    &:hover
      set-bg1()
    &:not(.KKjvXb) .qGfVtc
      set-fg()  
    &.KKjvXb // Selected language
      set-bg1()
    &.RCaXn:not(.KKjvXb) .S3Dwie // previously used langauge icon
      set-fg()

  // Various icon buttons
  .ZihNHd:not(:disabled)
    set-fg()